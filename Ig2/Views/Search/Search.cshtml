@model Ig2.Models.PlainHolders.SearchInfo
@using Ig2.Models.Sectors
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("GetList", "Search", FormMethod.Post))
        {   @Html.TextBoxFor(x => x.neededItem)
            @Html.DropDownListFor(x => x.searchIndex, new SelectList(AllSectors.selectList, "Value", "Text"))
            <input type="submit" value="Search" />
        }
        
    </div>
</body>
</html>
